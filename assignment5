//reverseString
             string inputString, rString = "";
             int i, j;

             Console.Write("Enter string: ");
            inputString = Console.ReadLine();

             j = inputString.Length - 1;
             for (i = j; i >= 0; i--)
             {
                 rString = rString + inputString[i];
             }

            Console.WriteLine("Reverse order of string is: " + rString);
            
            
