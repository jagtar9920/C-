//button

            int length = Convert.ToInt32(output.Text);
            square mysquare = new square();
            mysquare.setLength(length);
            MessageBox.Show("Area of square is " + mysquare.getLength() + " is " + mysquare.calculateSquareArea());
            
//square
    class square : rectangle
    {
        public int calculateSquareArea()
        {
            return (newLength * newLength);
        }
    }
    
//rect
   public rectangle()
        {
            newLength = 0;
            newWidth = 0;
        }
        public rectangle(int length,int width)
        {
            newLength = length;
            newWidth = width;
        }
        public int getLength()
        {
            return newLength;
        }
        private int getWidth()
        {
            return newWidth;
        }
        public void setLength(int length)
        {
            newLength = length;
        }
        private void setWidth(int width)
        {
            newWidth = width;
        }
        private int calculatearea()
        {
            return (newLength * newWidth);
        }
        public int newLength;
        private int newWidth;

